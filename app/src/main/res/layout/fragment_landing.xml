<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.LandingFragment">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#164C5C"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#164C5C"
            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:src="@drawable/icons8_wave_25"
                android:layout_marginTop="20dp"
                android:layout_marginStart="70dp"
                app:tint="#44FAFA" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:text="EclecStay"
                android:textStyle="bold"
                android:textSize="38sp"
                android:textColor="#2AF6F6" />

            <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:background="#164C5C"
                android:foregroundGravity="center"
                android:padding="7dp"
                android:scaleType="centerInside"
                app:tint="@color/white"
                android:src="@drawable/icons8_message_50__2_" />

            <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="5dp"
                android:background="#164C5C"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/icons8_notification_bell_50__1_"
                app:tint="@color/white" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="80dp"
            android:orientation="horizontal">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/topScrollRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal" />
        </LinearLayout>

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#6D969C"
        app:layout_constraintTop_toBottomOf="@id/frameLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/frameCard"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/black"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#6D969C"
                    android:scaleType="centerInside"
                    android:layout_margin="5dp"
                    android:padding="5dp">
                    <ImageButton
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/icons8_location_50"
                        android:scaleType="centerInside"
                        android:background="#6D969C"
                        android:padding="10dp"
                        app:tint="@color/white" />

                    <EditText
                        android:id="@+id/startDestination"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_marginTop="10dp"
                        android:textColorHint="@color/white"
                        android:hint="Start destination"
                        android:textSize="16dp"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#6D969C"
                    android:scaleType="centerInside"
                    android:layout_marginTop="60dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:padding="5dp">
                    <ImageButton
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/icons8_location_50"
                        android:scaleType="centerInside"
                        android:padding="10dp"
                        android:background="#6D969C"
                        app:tint="@color/white" />

                    <EditText
                        android:id="@+id/dropOff"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_marginTop="10dp"
                        android:textColorHint="@color/white"
                        android:hint="Drop Off"
                        android:textSize="16sp"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/search_button_background"
                    android:scaleType="centerInside"
                    android:layout_marginTop="150dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:padding="5dp">

                    <Button
                        android:id="@+id/searchButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SEARCH"
                        android:textColor="@color/white"
                        android:background="#3C6267"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/bodyFrameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frameCard">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Travel more, Spend less"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/white"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="10dp"
                    android:background="#6D969C"
                    android:layout_marginEnd="10dp">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/cabRecyclerView"
                        android:layout_width="wrap_content"
                        android:background="#3C6267"
                        android:backgroundTint="#3C6267"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </FrameLayout>

            <fragment
                android:id="@+id/mapFragment"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="220dp"
                app:layout_constraintTop_toBottomOf="@id/bodyFrameLayout"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="10dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
