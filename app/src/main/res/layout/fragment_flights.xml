<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/landing_background"
    tools:context=".view.FlightsFragment">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#DFD0D0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="25dp"
                android:text="EclecStay"
                android:textStyle="bold"
                android:textSize="38sp"
                android:textColor="#2A86F6" />

            <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="5dp"
                android:background="#DFD0D0"
                android:foregroundGravity="center"
                android:padding="5dp"
                android:scaleType="centerInside"
                app:tint="@color/black"
                android:src="@drawable/icons8_message_50__2_" />

            <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="5dp"
                android:background="#DFD0D0"
                android:padding="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/icons8_notification_bell_50__1_"
                app:tint="@color/black" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/topScrollRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal" />
        </LinearLayout>

    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/frameLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/landing_background"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >



    <FrameLayout
        android:id="@+id/frameCard"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/top_frame_background"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/landing_background"
            android:scaleType="centerInside"
            android:layout_margin="5dp"
            android:padding="5dp">
            <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/icons8_sorting_arrows_horizontal_64"
                android:scaleType="centerInside"
                android:layout_marginTop="10dp"
                android:layout_marginStart="50dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:padding="2dp"
                app:tint="@color/black" />

            <AutoCompleteTextView
                android:id="@+id/autoCompleteText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_drop_down"
                android:layout_marginStart="30dp"
                android:hint="Select Trip Option"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_medium"
                android:inputType="none"
                android:focusable="false"
                android:textColorHint="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/landing_background"
            android:scaleType="centerInside"
            android:layout_marginTop="100dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:padding="5dp">
            <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/icons8_circle_16"
                android:scaleType="centerInside"
                android:padding="0dp"
                android:layout_gravity="center"
                android:background="@color/white"
                app:tint="@color/black" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_medium"
                android:textColorHint="@color/black"
                android:hint="Where From?"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:textSize="16sp"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="50dp"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_medium"
                android:layout_gravity="center"
                android:hint="Where To?"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/landing_background"
            android:scaleType="centerInside"
            android:layout_marginTop="220dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="5dp">

            <ImageButton
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/icons8_calender_64"
                android:scaleType="centerInside"
                android:padding="2dp"
                android:background="@color/white"
                app:tint="@color/black" />

            <EditText
                android:id="@+id/etDeparture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="@color/black"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/black"
                android:hint="Departure"
                android:textSize="16sp"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:focusable="false"
                android:clickable="true"
                />

            <EditText
                android:id="@+id/etReturn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_medium"
                android:hint="Return"
                android:textSize="16sp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:focusable="false"
                android:clickable="true"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/search_button_background"
            android:scaleType="centerInside"
            android:layout_marginTop="320dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEARCH"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_gravity="center"
            />
        </LinearLayout>

    </FrameLayout>

            <TextView
                android:id="@+id/tvCheapFlights"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Find Cheap Flights"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/frameCard"/>


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@id/tvCheapFlights"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nairobi"
                    android:textSize="12sp"
                    android:backgroundTint="#3C6267"
                    android:textColor="@color/black"
                    android:background="@drawable/buttons"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kisumu"
                    android:textSize="12sp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"
                    android:background="@drawable/buttons"
                    android:backgroundTint="#3C6267"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nanyuki"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp"
                    android:textSize="12sp"
                    android:background="@drawable/buttons"
                    android:backgroundTint="#3C6267"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mombasa"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="#3C6267"
                    android:textSize="12sp"
                    android:background="@drawable/buttons"
                    />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>